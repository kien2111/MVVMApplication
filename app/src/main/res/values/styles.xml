<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="FeedAppBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/bottombar_icon</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
    <style name="FeedTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabLayoutTitleFeedFragment</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabIndicatorColor">@android:color/white</item>
    </style>
    <style name="TabLayoutTitleFeedFragment" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/feed_textsize_12sp</item>
    </style>
    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:minHeight">9dp</item>
        <item name="android:maxHeight">15dp</item>
    </style>
    <style name="DetailProfileRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/detail_profile_ratingbar</item>
        <item name="android:minHeight">9dp</item>
        <item name="android:maxHeight">30dp</item>
    </style>
</resources>
