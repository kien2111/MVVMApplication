<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>
    <style name="FeedAppBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
    <style name="MyTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyTabLayoutTitle</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorColor">@android:color/white</item>
    </style>
    <style name="MyTabLayoutTitle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/user_profile_textsize_12sp</item>
    </style>
    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:minHeight">9dp</item>
        <item name="android:maxHeight">15dp</item>
    </style>
    <style name="DetailProfileRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/detail_profile_ratingbar</item>
        <item name="android:minHeight">9dp</item>
        <item name="android:maxHeight">30dp</item>
    </style>
    <style name="RattingBarSetting" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:isIndicator">false</item>
        <item name="android:minHeight">9dp</item>

        <item name="android:maxHeight">50dp</item>
    </style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Gets rid of the search icon -->
        <item name="searchIcon">@drawable/ic_search_white_24dp</item>
        <!-- Gets rid of the "underline" in the text -->
        <item name="queryBackground">@android:color/white</item>
        <!-- Gets rid of the search icon when the SearchView is expanded -->
        <item name="searchHintIcon">@null</item>
        <!-- The hint text that appears when the user has not typed anything -->
        <item name="android:queryHint">@string/title_search_view</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#00bcd4</item>
        <item name="colorControlActivated">#4caf50</item>
    </style>
    <style name="RaisedButtonColorPrimary" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimaryBlueGrey</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>
    <style name="AppTheme.RoundedCornerMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:background">@drawable/border_corner_light</item>
    </style>
    <style name="Widget.MyApp.Toolbar.Solid" parent="Widget.AppCompat.ActionBar">
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
        <item name="android:colorControlNormal" tools:ignore="NewApi">@android:color/white</item>
    </style>
    <style name="RaisedButtonBottomSheetDialog" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="colorButtonNormal">@color/lime</item>
    </style>
    <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Parent theme sets colorControlNormal to textColorPrimary. -->
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="AppTheme.PopupOverlay">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="colorPrimaryRaisedButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimaryBlueGrey</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="colorPrimaryBlueGreyRadioBtn" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimaryBlueGrey</item>
    </style>

    <style name="MyEdittextStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/color_lighter_gray</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/lime</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorPrimaryBlueGrey</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorPrimaryBlueGrey</item>
    </style>
    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">#ffff</item>
    </style>
    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="layout">@layout/toolbar_search_view</item>
        <item name="commitIcon">@drawable/ic_search_commit</item>
        <item name="closeIcon">@drawable/ic_close_gray_24dp</item>
        <item name="voiceIcon">@drawable/ic_keyboard_voice_gray_24dp</item>
        <item name="colorControlNormal">#747474</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="autoCompleteTextViewStyle">@style/AutoCompleteTextViewStyle</item>
        <item name="suggestionRowLayout">@layout/search_view_suggestion_row</item>
        <item name="android:maxWidth">9999dp</item>
    </style>

    <style name="AutoCompleteTextViewStyle" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:popupBackground">@drawable/search_suggestions_bg</item>
        <item name="android:popupElevation" tools:targetApi="lollipop">0dp</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="searchViewStyle">@style/SearchViewTheme</item>
    </style>

    <style name="PremiumRaisedButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/red_material</item>
        <item name="colorButtonNormal">@color/red_material</item>
    </style>
    <style name="MediumRaisedButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/teal_material</item>
        <item name="colorButtonNormal">@color/teal_material</item>
    </style>
    <style name="BasicRaisedButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/indigo_material</item>
        <item name="colorButtonNormal">@color/indigo_material</item>
    </style>
    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#e91e63</item>
        <item name="colorButtonNormal">#8e24aa</item>
    </style>
</resources>
