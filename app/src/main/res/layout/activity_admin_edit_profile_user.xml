<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="vm"
            type="com.mvvm.kien2111.mvvmapplication.ui.admin.user.fragment.edituser.UserEditProfileViewModel"/>
        <variable name="user" type="com.mvvm.kien2111.mvvmapplication.model.User"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="@color/color_admin_background_title">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:layout_toLeftOf="@+id/imv_cancel">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:text="@string/admin_title_editprofile_user"
                    android:textColor="@color/color_admin_text_title"
                    android:textSize="@dimen/admin_textsize_20dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:tint="#FFFFFF"
                android:onClick="finishActivity"
                android:layout_marginTop="10dp"
                android:background="@drawable/icon_admin_close"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="vertical"
            android:background="@drawable/admin_color_background_adduser"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/admin_add_newuser_username"
                android:textSize="@dimen/admin_textsize_16dp"/>
            <EditText
                android:id="@+id/edt_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/admin_edittext_border"
                android:text="@{user.userName}"
                android:padding="3dp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/admin_add_newuser__email"
                android:textSize="@dimen/admin_textsize_16dp"/>
            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="@{user.email}"
                android:background="@drawable/admin_edittext_border"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="@dimen/admin_textsize_16dp"/>
            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:inputType="textPassword"
                android:text="@{user.password}"
                android:background="@drawable/admin_edittext_border"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/admin_add_newuser_age"
                        android:textSize="@dimen/admin_textsize_16dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_birthday"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:textSize="@dimen/admin_textsize_14dp"
                            android:background="@drawable/admin_edittext_border"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="center"
                            android:src="@drawable/icon_user_calendar"
                            android:paddingLeft="10dp"
                            android:onClick="setbirthday"
                            android:paddingTop="5dp"/>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imv_show_avatar"
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:background="@drawable/icon_admin_avatar_user"/>

            </LinearLayout>


            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roles"
                android:textSize="@dimen/admin_textsize_16dp"/>
            <Spinner
                android:id="@+id/spiner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/admin_button_editprofile_user"
                android:gravity="center"
                android:background="#9EC3D3"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:onClick="callUpdateUser"
                android:textColor="@color/color_admin_black"
                android:textSize="@dimen/admin_textsize_16dp"/>
        </LinearLayout>

    </LinearLayout>
</layout>