<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.mvvm.kien2111.mvvmapplication.model.Gender"/>
        <variable
            name="vm"
            type="com.mvvm.kien2111.mvvmapplication.ui.userprofile.invidual.IndividualProfileViewModel"/>
    </data>
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginEnd="20dp"
                android:text="Thông tin hồ sơ"/>
            <EditText
                android:id="@+id/edt_realname"
                android:paddingBottom="10dp"
                android:paddingStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name_hint"
                android:theme="@style/MyEdittextStyle" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gender"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:textColor="@color/user_color_text_black"/>
                <RadioGroup
                    android:id="@+id/radioGender"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/radioButtonMale"
                        android:layout_marginEnd="10dp"
                        android:text="@string/Male"
                        android:theme="@style/colorPrimaryBlueGreyRadioBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/radioButtonFemale"
                        android:layout_marginEnd="10dp"
                        android:text="@string/female"
                        android:theme="@style/colorPrimaryBlueGreyRadioBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/radioButtonUnknown"
                        android:text="@string/unknown"
                        android:theme="@style/colorPrimaryBlueGreyRadioBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>
            </LinearLayout>
            <FrameLayout
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/birthdaybutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp">
                <EditText
                    android:focusable="false"
                    android:cursorVisible="true"
                    android:textColorHint="@color/darker_gray"
                    android:id="@+id/tv_datetime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:paddingEnd="24dp"
                    android:paddingStart="5dp"
                    android:paddingBottom="10dp"
                    android:hint="@string/birthday"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:theme="@style/MyEdittextStyle" />
                <ImageView
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginTop="5dp"
                    android:contentDescription=""
                    android:id="@+id/imv_settime"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_event_color_primary_blue_grey_24dp" />
            </FrameLayout>
            <android.support.v7.widget.CardView
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:text="@string/place"
                        android:textSize="16sp"
                        android:padding="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.mvvm.kien2111.mvvmapplication.util.CustomSpinner
                            android:layout_weight="1"
                            android:id="@+id/spinnerCity"
                            style="@style/Widget.AppCompat.Spinner"
                            android:layout_margin="10dp"
                            android:dropDownWidth="200dp"
                            android:layout_height="?attr/dropdownListPreferredItemHeight"
                            android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                            android:background="@drawable/spinner_bg"
                            android:popupBackground="@android:color/white"
                            android:paddingEnd="14dp"
                            android:paddingStart="0dp"
                            android:stateListAnimator="@drawable/spinner_sla"
                            android:popupElevation="3dp"
                            android:layout_width="0dp"
                            tools:targetApi="lollipop" />
                        <com.mvvm.kien2111.mvvmapplication.util.CustomSpinner
                            android:layout_weight="1"
                            android:id="@+id/spinnerDistrict"
                            style="@style/Widget.AppCompat.Spinner"
                            android:layout_margin="10dp"
                            android:dropDownWidth="200dp"
                            android:layout_height="?attr/dropdownListPreferredItemHeight"
                            android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                            android:background="@drawable/spinner_bg"
                            android:popupBackground="@android:color/white"
                            android:paddingEnd="14dp"
                            android:paddingStart="0dp"
                            android:stateListAnimator="@drawable/spinner_sla"
                            android:popupElevation="3dp"
                            android:layout_width="0dp"
                            tools:targetApi="lollipop" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                app:cardElevation="2dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:paddingTop="3dp"
                    android:weightSum="15"
                    tools:targetApi="lollipop">
                    <TextView
                        android:textColor="@android:color/black"
                        android:id="@+id/categoryProfile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="14"
                        android:gravity="center_vertical"/>
                    <ImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/admin_background_notibar_second"
                        android:contentDescription=""
                        android:scaleType="center"
                        android:src="@drawable/ic_chevron_right_gray_24dp"
                        tools:targetApi="lollipop" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:text="@string/contact_info"
                        android:textSize="16sp"
                        android:padding="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <FrameLayout
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp">
                        <EditText
                            android:id="@+id/edt_phonenumber"
                            android:paddingBottom="10dp"
                            android:paddingEnd="24dp"
                            android:paddingStart="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/MyEdittextStyle"
                            android:gravity="start"
                            android:hint="@string/phonenumber"
                            android:inputType="phone"
                            android:textColorHint="@color/darker_gray"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp" />
                        <ImageView
                            android:layout_marginTop="5dp"
                            android:layout_gravity="end"
                            android:contentDescription=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_phone_color_primary_grey_24dp"
                            android:id="@+id/imageView2" />
                    </FrameLayout>
                    <FrameLayout
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp">
                        <EditText
                            android:id="@+id/edt_email"
                            android:paddingBottom="10dp"
                            android:paddingEnd="24dp"
                            android:paddingStart="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/MyEdittextStyle"
                            android:gravity="start"
                            android:hint="@string/email"
                            android:inputType="textEmailAddress"
                            android:textColorHint="@color/darker_gray"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp" />
                        <ImageView
                            android:layout_marginTop="5dp"
                            android:layout_gravity="end"
                            android:contentDescription=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_email_color_primary_blue_grey_24dp"
                            android:id="@+id/imgEmail" />
                    </FrameLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                app:cardElevation="2dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/edt_summary"
                        android:theme="@style/MyEdittextStyle"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:background="#E2E2E2"
                        android:inputType="textCapSentences|textMultiLine"
                        android:fadeScrollbars="true"
                        android:maxLength="2000"
                        android:maxLines="4"
                        android:scrollHorizontally="false"
                        android:hint="@string/let_employer_know_something_about_you"
                        android:textColor="@android:color/black" />
                    <TextView
                        android:padding="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginEnd="20dp"
                        android:text="@string/salary_expected"/>
                    <LinearLayout
                        android:padding="5dp"
                        android:weightSum="3"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/edt_fromSalary"
                            android:singleLine="true"
                            android:textColor="@color/green_accept_color"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:hint="@string/fromsalary"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:background="#E2E2E2"
                            android:drawableEnd="@drawable/ic_money_bag"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <ImageView
                            android:paddingEnd="24dp"
                            android:paddingStart="7dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:src="@drawable/ic_arrow_down"
                            android:tint="@color/colorPrimaryBlueGrey"
                            android:contentDescription=""
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <EditText
                            android:id="@+id/edt_toSalary"
                            android:textColor="@color/green_accept_color"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:hint="@string/tosalary"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:background="#E2E2E2"
                            android:drawableEnd="@drawable/ic_money_bag"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <com.mvvm.kien2111.mvvmapplication.util.PublishButton
                android:id="@+id/publish_btn"
                android:elevation="20dp"
                android:translationZ="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:targetApi="lollipop" />
        </LinearLayout>
    </ScrollView>
</layout>