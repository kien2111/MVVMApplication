<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:attrs="http://schemas.android.com/tools">
    <data>
        <variable
            name="vm"
            type="com.mvvm.kien2111.mvvmapplication.ui.upgrade.freelancerupgrade.FreelancerUpgradeViewModel"/>
    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>
        <View
            android:layout_above="@id/controllerContainer"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="#fff"/>
        <RelativeLayout
            android:id="@+id/controllerContainer"
            android:padding="5dp"
            android:layout_alignParentBottom="true"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:background="@android:color/transparent"
                android:id="@+id/btnSkip"
                android:text="BACK"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.rd.PageIndicatorView
                app:piv_viewPager="@id/viewPager"
                app:piv_dynamicCount="true"
                app:piv_interactiveAnimation="true"
                android:layout_centerInParent="true"
                app:piv_unselectedColor="#aaaa"
                app:piv_selectedColor="#ffff"
                android:id="@+id/pageIndicatorView"
                attrs:piv_padding="12dp"
                app:piv_count="3"
                attrs:piv_radius="8dp"
                app:piv_animationType="thinWorm"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
            <ImageButton
                android:layout_centerInParent="true"
                android:background="@null"
                android:textColor="@android:color/white"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_chevron_right_white_36dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>
</layout>