<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="LoadingMoreState"
            type="Boolean"/>
        <variable
            name="vm"
            type="com.mvvm.kien2111.mvvmapplication.ui.listappointment.ListAppointmentViewModel"/>
    </data>
    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{vm.headerName}"
            android:textColor="@android:color/black"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:id="@+id/header"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:background="#AFAFAF"/>
        <android.support.v7.widget.RecyclerView
            android:layout_below="@id/header"
            android:id="@+id/recycleViewAppointment"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
        <com.mvvm.kien2111.mvvmapplication.util.NoAvailableData
            app:no_available_img="@drawable/ic_no_history_appointment"
            app:no_available_img_width="100dp"
            app:no_available_img_height="100dp"
            app:no_available_text_content="@string/no_history_appointment_available"
            app:no_available_textsize="12sp"
            app:no_available_textcolor="@color/ef_grey"
            android:id="@+id/noavailabledata"
            android:layout_below="@id/header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</layout>