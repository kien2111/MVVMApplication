<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.mvvm.kien2111.fastjob.ui.userprofile.UserProfileViewModel"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            app:cardElevation="4dp"
            android:id="@+id/detailcontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/imv_avatar"
                    android:padding="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <LinearLayout
                    android:weightSum="10"
                    android:layout_marginStart="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="8"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/user_color_text_black"/>
                        <TextView
                            android:id="@+id/txt_priority_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginTop="5dp"/>
                        <com.mvvm.kien2111.fastjob.util.PriorityButton
                            android:onClick="onClickUpgradeProfile"
                            android:textAllCaps="false"
                            android:paddingEnd="50dp"
                            android:paddingStart="30dp"
                            android:drawablePadding="10dp"
                            android:textSize="12sp"
                            android:id="@+id/priority_btn"
                            android:theme="@style/RaisedButtonColorPrimary"
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="@string/upgrade_profile"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:contentDescription=""
                        android:id="@+id/imv_back"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/ic_close_gray_24dp"
                        />
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:id="@+id/saveChangeButton"
            android:gravity="center"
            android:background="#eee"
            android:layout_below="@id/detailcontainer"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="#aaaaaa"
                android:text="@string/sync_profile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageView
                android:padding="5dp"
                android:contentDescription=""
                android:src="@drawable/ic_refresh_lime_24dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_below="@id/saveChangeButton"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            style="@style/MyTabLayoutStyle"
            app:tabMaxWidth="0dp"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabTextColor="@color/darker_gray">
        </android.support.design.widget.TabLayout>
        <android.support.v4.view.ViewPager
            android:layout_below="@+id/tab_layout"
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v4.view.ViewPager>

    </RelativeLayout>
</layout>