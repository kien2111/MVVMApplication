<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="olduser"
            type="com.mvvm.kien2111.mvvmapplication.model.User"/>
        <variable
            name="priorityProfileName"
            type="String"/>
        <variable
            name="vm"
            type="com.mvvm.kien2111.mvvmapplication.ui.userprofile.UserProfileViewModel"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:fillViewport="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/detailcontainer"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/imv_avatar"
                        android:padding="5dp"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@{olduser.avatar}"/>
                    <LinearLayout
                        android:weightSum="10"
                        android:layout_marginStart="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_weight="8"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textColor="@color/user_color_text_black"
                                android:text="@{olduser.realname,default=@string/default_name}" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="@{priorityProfileName}"
                                android:layout_marginTop="5dp"/>
                            <Button
                                android:textAllCaps="false"
                                android:paddingEnd="50dp"
                                android:paddingStart="50dp"
                                android:textSize="12sp"
                                android:textColor="@color/lime"
                                android:background="@color/colorPrimary"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:text="@string/upgrade_profile"
                                android:layout_marginTop="10dp"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_weight="2"
                            android:layout_gravity="center"
                            android:contentDescription=""
                            android:id="@+id/imv_back"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:scaleType="center"
                            android:src="@drawable/ic_close_gray_24dp"
                            />
                    </LinearLayout>


                </LinearLayout>
                <android.support.design.widget.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_below="@id/detailcontainer"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:tabMode="scrollable"
                    style="@style/MyTabLayoutStyle"
                    app:tabTextColor="@color/darker_gray">
                </android.support.design.widget.TabLayout>
                <com.mvvm.kien2111.mvvmapplication.ui.universal.common.WrapHeightViewPager
                    android:layout_below="@+id/tab_layout"
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.mvvm.kien2111.mvvmapplication.ui.universal.common.WrapHeightViewPager>

            </RelativeLayout>


        </ScrollView>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/saveChangeButton"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/lime"
                android:text="@string/sync_profile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <ImageView
                android:padding="5dp"
                android:contentDescription=""
                android:src="@drawable/ic_refresh_lime_24dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>

</layout>