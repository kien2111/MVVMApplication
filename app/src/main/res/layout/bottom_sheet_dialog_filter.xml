<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >
    <data>
        <variable
            name="object"
            type="Object"/>
    </data>
    <LinearLayout
        android:background="#2f333f"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/filterButton"
            android:background="@color/colorAccent"
            android:padding="12dp"
            android:gravity="center_horizontal"
            android:text="@string/filter"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:elevation="20dp"
            android:background="#64ffda"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_height="wrap_content"
            tools:ignore="UnusedAttribute">
            <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:tint="@android:color/black"
                    android:contentDescription=""
                    android:src="@drawable/ic_skyline"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@android:color/black"
                    android:layout_weight="4"
                    android:text="@string/filter_follow_location"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <android.support.v7.widget.AppCompatSpinner
                    android:backgroundTint="@android:color/black"
                    android:id="@+id/spinnerAction"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:background="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="2dip"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:weightSum="7"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="12dp"
                    android:layout_weight="3"
                    android:textColor="@android:color/black"
                    android:text="@string/city"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="0dp"
                    android:backgroundTint="@android:color/black"
                    android:layout_weight="4"
                    android:id="@+id/cityspinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </android.support.v7.widget.AppCompatSpinner>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:weightSum="7"
                android:visibility="gone"
                android:id="@+id/districtspinnercontainer"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="12dp"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:text="@string/district"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent" />
                <android.support.v7.widget.AppCompatSpinner
                    android:backgroundTint="@android:color/black"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="0dp"
                    android:id="@+id/districtspinner"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="match_parent">
                </android.support.v7.widget.AppCompatSpinner>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/expand_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--<View
                android:layout_marginTop="10dp"
                android:background="@color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>-->
            <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:contentDescription=""
                    android:layout_weight="1"
                    android:tint="@android:color/white"
                    android:src="@drawable/ic_level_filter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@android:color/white"
                    android:text="@string/filter_follow_level"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <android.support.v7.widget.AppCompatSpinner
                    android:backgroundTint="@android:color/white"
                    android:id="@+id/spinner_select_level"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    tools:ignore="UnusedAttribute" />
            </LinearLayout>
            <!--<View
                android:layout_marginTop="10dp"
                android:background="@color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>-->
            <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="1"
                    android:tint="@android:color/white"
                    android:src="@drawable/ic_salary_expectedfilter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@android:color/white"
                    android:text="@string/filter_follow_salary_expected"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:text="@string/from"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <NumberPicker
                        android:id="@+id/from_salary_nump"
                        android:showDividers="middle"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content">
                    </NumberPicker>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:text="@string/to"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <NumberPicker
                        android:id="@+id/to_salary_num"
                        android:showDividers="middle"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content">
                    </NumberPicker>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/expand_btn"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="30dp"
            android:text="@string/expand_more_filter"
            android:background="#6200ea"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</layout>