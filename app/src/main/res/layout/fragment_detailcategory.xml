<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="LoadingMoreState"
            type="Boolean"/>
        <variable
            name="vm"
            type="com.mvvm.kien2111.mvvmapplication.ui.universal.detail_category.DetailCategoryViewModel"/>
    </data>
    <RelativeLayout
        android:background="#E2E2E2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <!-- <ProgressBar
            android:visibility="@{vm.showProgressBar?View.VISIBLE:View.GONE}"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />-->
        <android.support.v7.widget.Toolbar
            android:background="@color/colorPrimary"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:collapseIcon="@drawable/ic_arrow_back_24dp"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:theme="@style/ToolbarTheme"
            style="@style/Widget.MyApp.Toolbar.Solid" />
        <android.support.v7.widget.RecyclerView
            android:layout_below="@id/toolbar"
            android:id="@+id/profile_adapter_recycleview"
            app:layoutManager="LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</layout>