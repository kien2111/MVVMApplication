<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:background="@color/color_admin_background_title">
        <ImageView
            android:id="@+id/imv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:background="@drawable/icon_user_back"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:layout_toRightOf="@+id/imv_back"
            android:text="@string/user_text_title_rechange"
            android:textColor="@color/color_admin_text_title"
            android:textSize="@dimen/user_textsize_20dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exchange table"
        android:textSize="@dimen/admin_textsize_16dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#e0dff1"
        android:textColor="@color/user_color_text_black"/>
    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:gravity="center"
        android:columnWidth="100dp"
        android:numColumns="2"
        android:verticalSpacing="24dp"
        android:horizontalSpacing="10dp"
        android:stretchMode="spacingWidthUniform"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/user_ruchange_border_edittext"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/user_color_text_black"
        android:textSize="@dimen/user_textsize_16dp"
        android:hint="Số Serial"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã Pin"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/user_textsize_16dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/user_ruchange_border_edittext"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/user_color_text_black"
        android:layout_marginRight="5dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Nạp tiền"/>
</LinearLayout>
