<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="vm"
            type="com.mvvm.kien2111.fastjob.ui.admin.profile.AdminManageProfileViewModel"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:background="@color/color_admin_background_title">
            <ImageView
                android:id="@+id/imv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:onClick="finish"
                android:background="@drawable/icon_admin_home"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:layout_toRightOf="@+id/imv_back"
                android:text="@string/admin_edit_myinfo"
                android:textColor="@color/color_admin_text_title"
                android:textSize="@dimen/admin_textsize_20dp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="vertical"
            android:background="@drawable/admin_color_background_adduser"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/admin_add_newuser_username"
                android:textSize="@dimen/admin_textsize_16dp"/>
            <EditText
                android:id="@+id/edt_myname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/admin_edittext_border"
                android:padding="3dp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/admin_add_newuser__email"
                android:textSize="@dimen/admin_textsize_16dp"/>
            <EditText
                android:id="@+id/edt_myemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:background="@drawable/admin_edittext_border"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="@dimen/admin_textsize_16dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_toLeftOf="@+id/btn_change_pass"
                    android:background="@drawable/admin_edittext_border" />
                <Button
                    android:id="@+id/btn_change_pass"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="Change"
                    android:textSize="@dimen/admin_textsize_10dp"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/admin_add_newuser_age"
                        android:textSize="@dimen/admin_textsize_16dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_birthday"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:textSize="@dimen/admin_textsize_14dp"
                            android:background="@drawable/admin_edittext_border"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="center"
                            android:src="@drawable/icon_user_calendar"
                            android:paddingLeft="10dp"
                            android:onClick="setbirthday"
                            android:paddingTop="5dp"/>
                    </LinearLayout>

                </LinearLayout>
                <ImageView
                    android:id="@+id/imv_show_avatar"
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:background="@drawable/icon_admin_avatar_user"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Browse"
                    android:onClick="selectImage"
                    android:layout_marginTop="20dp"
                    android:textSize="@dimen/admin_textsize_10dp" />

            </LinearLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Profile"
                android:gravity="center"
                android:background="#9EC3D3"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/color_admin_black"
                android:onClick="updateMyProfile"
                android:textSize="@dimen/admin_textsize_16dp"/>
        </LinearLayout>

    </LinearLayout>
</layout>
