<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mvvm.kien2111.mvvmapplication">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission
        android:name="android.permission.MANAGE_ACCOUNTS"
        android:maxSdkVersion="22" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name=".MyApplication"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <provider android:name=".ui.universal.search.SuggestionSearchProvider"
            android:authorities="com.mvvm.kien2111.mvvmapplication.ui.universal.search.SuggestionSearchProvider" />

        <receiver android:name=".broadcast.NetworkChangeReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <activity
            android:name=".ui.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER"/>


            </intent-filter>
        </activity>

        <service android:name=".authenticate.AuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>
            <meta-data android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator"/>
        </service>


        <activity android:name=".ui.universal.UniversalActivity">

           <!-- <intent-filter>
                <action android:name="com.google.android.gms.actions.SEARCH_ACTION"/>
            </intent-filter>-->
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:host="fastjob.com" android:scheme="http" android:pathPrefix="/welcome"/>
                <data android:host="fastjob.com" android:scheme="https"/>
            </intent-filter>
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".ui.SearchActivity" />

        </activity>


        <activity android:name=".ui.universal.search.searchresult.SearchActivity"
            android:exported="true"
            android:parentActivityName=".ui.universal.UniversalActivity"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.universal.UniversalActivity" />
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>

        <activity android:name=".ui.login.LoginActivity"/>
        <activity android:name=".ui.admin.main.AdminMainActivity"/>
        <activity android:name=".ui.signup.SignUpActivity"/>
        <activity android:name=".ui.admin.user.ManageUserActivity"/>
        <activity android:name=".ui.admin.statistical.AdminStatisticalActivity"/>
        <activity android:name=".ui.admin.profile.AdminManageProfileActivity"/>
        <activity android:name=".ui.listappointment.ListAppointmentActivity"/>
        <activity android:name=".ui.userprofile.UserProfileActivity" />
        <activity android:name=".ui.createappointment.CreateAppointmentActivity" />
        <activity android:name=".ui.depositfund.DepositFundActivity"
            android:parentActivityName=".ui.universal.UniversalActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.universal.UniversalActivity" />

        </activity>
        <activity android:name=".ui.upgrade.freelancerupgrade.FreelancerUpgradeActivity" />
        <activity android:name=".ui.upgrade.businessupgrade.BusinessUpgradeActivity" />

    </application>

</manifest>